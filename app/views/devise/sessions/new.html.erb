<%= render partial: '/shared/header', locals: { page_name: 'LOG IN'} %>

<div class="w-full pt-3 h-full relative">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: 'text-input' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: 'text-input' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="absolute bottom-[80px] w-full h-[80px] bg-color-button flex items-center justify-center p-2">
      <%= f.submit "Log in", class: 'border border-white h-full w-full text-white' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>